generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id                String @id
  nome              String @unique
  email_responsavel String
  turma             String

  @@map("aluno")
}

model Professor {
  id    String @id
  nome  String
  email String @unique

  @@map("professor")
}

model Disciplina {
  id                 String @id
  nome               String @unique
  qtd_aulas_semestre Int

  @@map("disciplina")
}

model Falta {
  id       String   @id
  aluno_id String
  aula_id  String
  data     DateTime

  @@map("falta")
}

model Aula {
  id            String @id
  professor_id  String
  disciplina_id String

  @@map("aula")
}
